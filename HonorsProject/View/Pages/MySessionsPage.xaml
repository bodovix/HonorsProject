<Page x:Class="HonorsProject.View.Pages.MySessionsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HonorsProject.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MySessionsPage">

    <StackPanel Orientation="Vertical">
        <Button Name="NewSessionBtn" Content="Create New" Style="{StaticResource FormSubmitButton}" Width="100" HorizontalAlignment="Left" />
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="*" />
            </Grid.RowDefinitions>
            <!--Lecturers Panel-->
            <StackPanel Grid.Column="0" Grid.Row="0" Orientation="Vertical">
                <StackPanel Orientation="Horizontal">
                    <TextBox Name="SearchTeachersTxtBox" />
                    <Image />
                </StackPanel>
            </StackPanel>
        </Grid>
    </StackPanel>
</Page>