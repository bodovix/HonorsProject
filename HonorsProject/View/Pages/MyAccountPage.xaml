<Page x:Class="HonorsProject.View.Pages.MyAccountPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
      xmlns:local="clr-namespace:HonorsProject.View.Pages"
      mc:Ignorable="d"
      d:DesignHeight="450" d:DesignWidth="800"
      Title="MyAccountPage">

    <Grid Style="{StaticResource ContainerGrid}">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <TextBlock Text="My Details" Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="2" Style="{StaticResource FormTitleText}" />
        <GroupBox Header="ID" Grid.Row="1" Grid.Column="0" Style="{StaticResource FormGroupBox}">
            <Label Content="" Style="{StaticResource UserFormLbl}" />
        </GroupBox>
        <GroupBox Header="Name" Grid.Row="2" Grid.Column="0" Style="{StaticResource FormGroupBox}">
            <TextBox TextWrapping="Wrap"
                                 Style="{StaticResource UserInput}"
                                 Text="" />
        </GroupBox>
        <GroupBox Header="Email" Grid.Row="3" Grid.Column="0" Style="{StaticResource FormGroupBox}">
            <Label Content="" Style="{StaticResource UserFormLbl}" />
        </GroupBox>
        <GroupBox Header="Password" Grid.Row="1" Grid.Column="1" Style="{StaticResource FormGroupBox}">
            <TextBox TextWrapping="Wrap"
                                 Style="{StaticResource UserInput}"
                                 Text="" />
        </GroupBox>
        <GroupBox Header="Created On" Grid.Row="2" Grid.Column="1" Style="{StaticResource FormGroupBox}">
            <Label Content="" Style="{StaticResource UserFormLbl}" />
        </GroupBox>
        <GroupBox Header="Created By" Grid.Row="3" Grid.Column="1" Style="{StaticResource FormGroupBox}">
            <Label Content="" Style="{StaticResource UserFormLbl}" />
        </GroupBox>
        <GroupBox Header="Role" Grid.Row="4" Grid.Column="1" Style="{StaticResource FormGroupBox}">
            <Label Content="" Style="{StaticResource UserFormLbl}" />
        </GroupBox>
        <Button Name="SaveBtn" Content="Save" Grid.Row="5" Grid.Column="0" Style="{StaticResource FormSaveButton}" />
        <Button Name="CancelBtn" Content="Cancel" Grid.Row="5" Grid.Column="1" Style="{StaticResource FormCancelButton}" />
    </Grid>
</Page>